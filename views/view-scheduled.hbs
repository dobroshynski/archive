<!DOCTYPE html>
<html >
<head>
  <title>AIT Repo Closer</title>
  <script src="https://use.fontawesome.com/ac6e918b68.js"></script>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
  <form method="POST" action="/confirm">
  <div class="container">
    <div class="top-buttons">
      <a href="/">
      <div class="white-button spaced">
        <button type="button">Close Repos</button>
      </div>
      </a>
      <span class="separator-button"></span>
      <a href="/scheduled/view">
      <div class="white-button spaced">
        <button type="button">View Scheduled</button>
      </div>
      </a>
      <span class="separator-button"></span>
      <a href="/scheduled/edit">
      <div class="white-button spaced">
        <button type="button">Edit Scheduled</button>
      </div>
      </a>
      <span class="separator-button"></span>
      <a href="/scheduled/delete">
      <div class="white-button spaced">
        <button type="button">Delete</button>
      </div>
      </a>
    </div>
    <div class="spacer"></div>
    <div class="wrapper-transparent">
      Scheduled repo closings
    </div>
    {{#each schedules as |singleSchedule|}}
    <div class="wrapper">
      <div class="scheduled-summary stretched-wrapper">
        <div class="info padded-double"> <i class="fa fa-github" aria-hidden="true"></i> <span class="view-scheduled"> {{singleSchedule.organizationName}} </span></div>
        <hr>
        <div class="info padded-double"> <i class="fa fa-folder" aria-hidden="true"></i> <span class="view-scheduled"> {{singleSchedule.homeworkName}} </span></div>
        <hr>
        <div class="info padded-double"> <i class="fa fa-clock-o" aria-hidden="true"></i> <span class="view-scheduled"> {{singleSchedule.closingDateTime}} </span></div>
      </div>
    </div>
    <div class="separator"></div>
    {{/each}}
    <div class="separator"></div>
    <div class="spacer"></div>
  </div>
  </form>
</body>
</html>
