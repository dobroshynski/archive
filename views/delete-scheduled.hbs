<!DOCTYPE html>
<html >
<head>
  <title>AIT Repo Closer</title>
  <script src="https://use.fontawesome.com/ac6e918b68.js"></script>
  <script src="/javascripts/main.js"></script>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
  <form method="POST" action="/confirm-delete">
  <div class="container">
    <div class="top-buttons">
      <a href="/">
      <div class="white-button spaced">
        <button type="button">Close Repos</button>
      </div>
      </a>
      <span class="separator-button"></span>
      <a href="/scheduled/view">
      <div class="white-button spaced">
        <button type="button">View Scheduled</button>
      </div>
      </a>
      <span class="separator-button"></span>
      <a href="/scheduled/edit">
      <div class="white-button spaced">
        <button type="button">Edit Scheduled</button>
      </div>
      </a>
      <span class="separator-button"></span>
      <a href="/scheduled/delete">
      <div class="white-button spaced">
        <button type="button">Delete</button>
      </div>
      </a>
    </div>
    <div class="spacer"></div>
    <div class="wrapper-transparent">
      Choose a scheduled repo closing to delete
    </div>
    <div class="wrapper">
      <input id="repoClosingScheduleIdentifier" type="hidden" name="repoClosingScheduleIdentifier" value="">
      <select id="delete-list-picker" name="schedules-list-picker" form="schedule-edit-form">
        {{#each schedules as |singleSchedule|}}
          <option value="{{singleSchedule.scheduleID}}">{{singleSchedule.scheduleName}}</option>
        {{/each}}
      </select>
    </div>
    <div class="separator"></div>
      <div class="white-button spaced">
        <button type="submit">Delete</button>
      </div>
    <div class="separator"></div>
    <div class="spacer"></div>
  </div>
  </form>
</body>
</html>
